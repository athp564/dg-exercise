<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>App</title>
</head>
<body>
    <div class="container">
        <h1 class="mb-4">Manage Users</h1>
        <a href="/users/new" class="btn btn-success mb-4">New User</a>

        <% users.forEach(user => { %>
            <div class="card border-secondary mb-2" style="padding:10px">
                <div>Name: <%= user.name %></div>
                <div>Email: <%= user.email %></div>
                <div>Joined: <%= user.joinDate.toLocaleDateString() %></div>
                <div>
                    <form action="/users/<%= user.id %>?_method=DELETE" method="POST">
                        <button type="submit" class="btn btn-danger btn-sm" style='float: right'>Remove User</button>
                    </form>
                </div>
            </div>
        <% }) %>
    </div>
</body>
</html>